{
  "name": "@linq-team/medic",
  "version": "1.0.0",
  "description": "TypeScript client for Medic heartbeat monitoring service",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest"
  },
  "keywords": [
    "medic",
    "heartbeat",
    "monitoring",
    "health-check",
    "linq"
  ],
  "author": "Linq Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/linq-team/medic.git",
    "directory": "Medic/clients/typescript"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
